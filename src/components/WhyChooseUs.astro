---
// WhyChooseUs component
const features = [
  {
    icon: `<svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5.5-2.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm11 0c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm-8.5-4c.83 0 1.5-.67 1.5-1.5S9.83 10.5 9 10.5s-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm6 0c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5-1.5.67-1.5 1.5.67 1.5 1.5 1.5zm-3-3c.83 0 1.5-.67 1.5-1.5S12.83 8 12 8s-1.5.67-1.5 1.5.67 1.5 1.5 1.5z"/></svg>`,
    title: 'Healthy Puppies',
    description: 'All puppies are vet-checked, vaccinated, and come with a health guarantee for your peace of mind.'
  },
  {
    icon: `<svg viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>`,
    title: 'Family Raised',
    description: 'Our puppies are raised in a loving home environment, ensuring they are well-socialized and ready for family life.'
  },
  {
    icon: `<svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>`,
    title: 'Lifetime Support',
    description: 'We offer ongoing guidance and support for the lifetime of your pet. Were always here to help!'
  },
  {
    icon: `<svg viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/></svg>`,
    title: 'Complete Paperwork',
    description: 'Every puppy comes with vaccination records, health certificates, and registration documentation.'
  }
];

const stats = [
  { number: '500+', label: 'Happy Families' },
  { number: '10+', label: 'Years Experience' },
  { number: '100%', label: 'Health Guarantee' }
];
---

<section class="why-choose-section">
  <div class="section-container">
    <div class="section-header">
      <span class="section-badge">Why Us</span>
      <h2 class="section-title">Why Choose <span>Montessa Kennel</span>?</h2>
      <p class="section-subtitle">We're dedicated to connecting loving families with healthy, happy puppies.</p>
    </div>

    <div class="features-grid">
      {features.map((feature) => (
        <div class="feature-card">
          <div class="feature-icon" set:html={feature.icon}></div>
          <h3 class="feature-title">{feature.title}</h3>
          <p class="feature-description">{feature.description}</p>
        </div>
      ))}
    </div>

    <div class="promise-section">
      <div class="promise-content">
        <h3 class="promise-title">Our Promise to You</h3>
        <p class="promise-text">Every puppy leaves our home with love, proper care, and the foundation for a wonderful life with their new family. We treat each puppy as part of our own family until they become part of yours.</p>
      </div>
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-number">{stat.number}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .why-choose-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #ffffff;
    padding: 4rem 1.5rem;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    background: #f19645;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.75rem;
  }

  .section-title span {
    color: #e08839;
  }

  .section-subtitle {
    font-size: 1.05rem;
    color: #666;
    margin: 0;
    max-width: 500px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .feature-card {
    background: #faf5eb;
    border-radius: 16px;
    padding: 1.75rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #f19645, #e08839);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .feature-icon :global(svg) {
    width: 28px;
    height: 28px;
    fill: white;
  }

  .feature-title {
    font-size: 1.15rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .feature-description {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .promise-section {
    background: linear-gradient(135deg, #f19645, #e08839);
    border-radius: 20px;
    padding: 2.5rem;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  .promise-content {
    color: white;
  }

  .promise-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
  }

  .promise-text {
    font-size: 1rem;
    line-height: 1.7;
    opacity: 0.9;
    margin: 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .stat-item {
    text-align: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.25rem 0.5rem;
  }

  .stat-number {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .why-choose-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .promise-section {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 1.5rem;
    }

    .stats-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
    }

    .stat-item {
      padding: 1rem 0.25rem;
    }

    .stat-number {
      font-size: 1.5rem;
    }
  }
</style>
