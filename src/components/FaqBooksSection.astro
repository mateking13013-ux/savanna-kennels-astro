---
// FaqBooksSection component
import { faqs } from '../data/faqs';
---

<section class="faq-books-section">
  <div class="section-container">
    <div class="faq-health-row">
      <div class="faq-column">
        <h2>Questions To Ask Before Buying A puppy Puppy</h2>
        <div class="faq-list">
          {faqs.map((faq) => (
            <div class="faq-item">
              <p class="faq-question">Q. {faq.question}</p>
              <p class="faq-answer">A. {faq.answer}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="health-column">
        <div class="health-image">
          <img src="/images/vet-puppy.jpg" alt="Veterinarian examining a puppy">
        </div>
        <h3>We Prioritize Health Care</h3>
        <p>We place a strong emphasis on our puppies' health, making sure they receive all necessary vaccinations before they join their new families. This ensures they are safe around both children and adults. Each puppy comes with a lifetime health guarantee, is fully vaccinated, and includes a veterinary certificate.</p>
      </div>
    </div>

  </div>
</section>

<style>
  .faq-books-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #f8f6f3;
    padding: 4rem 1.5rem;
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-health-row {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .faq-column h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 1.5rem;
    line-height: 1.3;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .faq-question {
    font-size: 1rem;
    font-weight: 600;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .faq-answer {
    font-size: 0.95rem;
    color: #5a5a5a;
    line-height: 1.7;
    margin: 0;
  }

  .health-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .health-image {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .health-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .health-column h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 1rem;
  }

  .health-column p {
    font-size: 0.95rem;
    color: #5a5a5a;
    line-height: 1.7;
    margin: 0;
    max-width: 400px;
  }

  @media (max-width: 900px) {
    .faq-health-row {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .health-column {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .faq-books-section {
      padding: 3rem 1rem;
    }

    .faq-column h2 {
      font-size: 1.5rem;
    }

    .health-image {
      width: 220px;
      height: 220px;
    }

    .health-column h3 {
      font-size: 1.25rem;
    }
  }
</style>
