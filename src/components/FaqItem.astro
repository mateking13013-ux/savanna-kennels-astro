---
// FaqItem component - Expandable FAQ item
interface Props {
  question: string;
}

const { question } = Astro.props;
---

<div class="faq-item">
  <button class="faq-header" aria-expanded="false">
    <span class="question">{question}</span>
    <span class="toggle-icon"></span>
  </button>
  <div class="faq-content">
    <div class="answer">
      <slot />
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.faq-item .faq-header').forEach(header => {
    header.addEventListener('click', () => {
      const item = header.closest('.faq-item');
      const isOpen = item?.classList.contains('open');
      item?.classList.toggle('open', !isOpen);
      header.setAttribute('aria-expanded', String(!isOpen));
    });
  });
</script>

<style>
  .faq-item {
    display: block;
    margin-bottom: 0.75rem;
    background: white;
    border-radius: 6px;
    overflow: hidden;
    border: 1px solid #e8e0d5;
  }

  .faq-item.open {
    border-color: #c9a77a;
  }

  .faq-header {
    width: 100%;
    padding: 1rem 1.25rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    transition: background 0.2s ease;
    background: none;
    border: none;
    text-align: left;
    font-family: inherit;
  }

  .faq-header:hover {
    background: #faf5eb;
  }

  .faq-item.open .faq-header {
    background: #faf5eb;
    border-bottom: 1px solid #e8e0d5;
  }

  .question {
    font-size: 0.95rem;
    font-weight: 600;
    color: #3a3a3a;
  }

  .toggle-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #8a7a6a;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .faq-item.open .toggle-icon {
    transform: rotate(180deg);
  }

  .toggle-icon::before {
    content: '';
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid currentColor;
  }

  .faq-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-item.open .faq-content {
    max-height: 500px;
  }

  .answer {
    padding: 1.25rem;
    color: #5a5a5a;
    line-height: 1.7;
    font-size: 0.95rem;
  }
</style>
