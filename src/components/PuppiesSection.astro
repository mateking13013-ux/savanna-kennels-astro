---
// PuppiesSection component
import { puppies } from '../data/puppies';
---

<section class="puppies-section" id="puppies">
  <div class="section-header">
    <h2 class="section-title">Holiday Delivery Update - Christmas Ready Puppies</h2>
    <p class="section-subtitle">To make this Christmas extra special, we are ensuring fast and reliable delivery within 24 hours during the holiday season. Pickup & Delivery Available - South Africa. Whether you choose pickup or delivery, we are fully open and ready to help your new furry family member arrive safely and on time for the holidays. Christmas is just around the corner - bring home love, warmth, and companionship this season. Contact us today to reserve your puppy.</p>
  </div>

  <div class="puppies-container">
    <div class="puppy-list">
      {puppies.map((puppy) => (
        <article class="puppy-card">
          <div class="puppy-image">
            <img src={puppy.image} alt={`${puppy.name} - ${puppy.sex} puppy`} loading="lazy">
          </div>

          <div class="puppy-info">
            <h3 class="puppy-name">Name: {puppy.name}</h3>
            <p class="info-price">${puppy.price}</p>
            <div class="puppy-details">
              <p class="detail-row"><strong>Sex:</strong> {puppy.sex}</p>
              <p class="detail-row"><strong>Age:</strong> {puppy.age}</p>
              <p class="detail-row"><strong>Status:</strong> {puppy.status}</p>
            </div>

            <div class="puppy-features">
              <div class="feature">
                <span class="feature-check">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
                Lifetime health guarantee
              </div>
              <div class="feature">
                <span class="feature-check">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
                Potty and crate trained
              </div>
              <div class="feature">
                <span class="feature-check">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
                Up to date vaccinations
              </div>
              <div class="feature">
                <span class="feature-check">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
                Up to date de-worming
              </div>
              <div class="feature">
                <span class="feature-check">
                  <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                </span>
                Starter Kit included
              </div>
            </div>

            <a href="/contact" class="btn-email">Contact Us</a>
          </div>

          <div class="puppy-sidebar">
            <p class="availability">Ready for a new home</p>

            <div class="sidebar-buttons">
              <a href="/contact" class="btn-inquiry">Contact Us</a>
              <a href={`sms:+12792412992?&body=Hello%20I%20am%20interested%20in%20this%20puppy%20Puppy%20${puppy.name}%20%0Awebsite:%20https://montessakennel.co.za/available-puppies`} class="btn-text">Send Text</a>
              <a href="/contact" class="btn-contact">Contact Us</a>
            </div>

            <p class="shipping-info">
              {puppy.description}. Our puppies come with all paperwork and a puppy kit. Vet checked and up to date on shots.
            </p>

            <div class="coat-info">
              <p class="coat-label"><strong>Coat:</strong></p>
              <p class="coat-description">{puppy.coat}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .puppies-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #fff;
    padding: 3rem 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #666;
    margin: 0;
    max-width: 1000px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .puppies-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .puppy-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .puppy-card {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0.75rem;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    border: 1px solid #eee;
    padding: 0.75rem;
    align-items: stretch;
  }

  .puppy-image {
    width: 100%;
    height: 100%;
    min-height: 280px;
    background: #f5f5f5;
    border-radius: 8px;
    overflow: hidden;
  }

  .puppy-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    border-radius: 8px;
  }

  .puppy-info {
    padding: 1rem 0.75rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .puppy-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.25rem;
  }

  .info-price {
    font-size: 1.35rem;
    font-weight: 700;
    color: #f19645;
    margin: 0 0 0.5rem;
  }

  .puppy-details {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
    margin-bottom: 0.75rem;
  }

  .detail-row {
    font-size: 0.9rem;
    color: #444;
    margin: 0;
    line-height: 1.4;
  }

  .detail-row strong {
    color: #333;
  }

  .puppy-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #444;
  }

  .feature-check {
    width: 20px;
    height: 20px;
    background: #f19645;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-check svg {
    width: 12px;
    height: 12px;
    fill: white;
  }

  .btn-email {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #e08839;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    width: fit-content;
  }

  .btn-email:hover {
    background: #f19645;
  }

  .puppy-sidebar {
    background: #ffffff;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-left: 1px solid #eee;
  }

  .availability {
    font-size: 0.9rem;
    color: #666;
    margin: 0 0 1rem;
  }

  .btn-inquiry {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #f19645;
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }

  .btn-inquiry:hover {
    background: #e08839;
  }

  .btn-text {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #f19645;
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }

  .btn-text:hover {
    background: #06372a;
    color: white;
  }

  .btn-contact {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #e08839;
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }

  .btn-contact:hover {
    background: #8B0000;
    color: white;
  }

  .sidebar-buttons {
    display: flex;
    flex-direction: column;
  }

  .shipping-info {
    font-size: 0.8rem;
    color: #666;
    line-height: 1.5;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e0d5;
  }

  .coat-info {
    margin-top: 0.5rem;
  }

  .coat-label {
    font-size: 0.9rem;
    color: #333;
    margin: 0 0 0.25rem;
  }

  .coat-description {
    font-size: 0.85rem;
    color: #555;
    line-height: 1.5;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .puppy-image {
      min-height: 260px;
    }

    .puppy-name {
      font-size: 1.35rem;
    }
  }

  @media (max-width: 900px) {
    .puppy-card {
      grid-template-columns: 1fr 1fr;
    }

    .puppy-image {
      grid-column: 1;
      grid-row: 1 / 3;
      height: 100%;
      min-height: 300px;
    }

    .puppy-info {
      grid-column: 2;
      grid-row: 1;
    }

    .puppy-sidebar {
      grid-column: 2;
      grid-row: 2;
      border-left: none;
      border-top: 1px solid #eee;
    }
  }

  @media (max-width: 768px) {
    .puppies-section {
      padding: 2rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .puppy-card {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .puppy-image {
      grid-column: 1;
      grid-row: 1;
      height: auto;
      min-height: 280px;
    }

    .puppy-info {
      grid-column: 1;
      grid-row: 2;
      padding: 1rem 1rem 0.5rem;
    }

    .puppy-sidebar {
      grid-column: 1;
      grid-row: 3;
      border-top: none;
      padding-top: 0;
    }

    .btn-text {
      display: inline-flex;
    }

    .btn-contact {
      display: inline-flex;
    }

    .sidebar-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .sidebar-buttons .btn-text,
    .sidebar-buttons .btn-contact {
      flex: 1;
      margin-bottom: 0;
    }

    .puppy-name {
      font-size: 1.35rem;
    }

    .btn-inquiry {
      display: none;
    }

    .btn-email {
      display: none;
    }
  }
</style>
