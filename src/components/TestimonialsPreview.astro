---
// TestimonialsPreview component
import { testimonialPreviews } from '../data/testimonials';
---

<section class="testimonials-section">
  <div class="section-container">
    <div class="section-header">
      <div class="google-reviews-badge">
        <img src="/images/image.png" alt="Google Reviews 5 Stars">
      </div>
      <h2 class="section-title">What Our Families Say</h2>
      <p class="section-subtitle">Read reviews from happy puppy owners</p>
    </div>

    <div class="testimonials-grid">
      {testimonialPreviews.map((t) => (
        <div class="testimonial-card">
          <div class="card-header">
            <div class="avatar">
              {t.initials}
              <span class="verified-badge">
                <svg viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
              </span>
            </div>
            <div class="reviewer-info">
              <h4>{t.name}</h4>
              <p class="reviewer-label">Reviewer</p>
            </div>
          </div>

          <div class="rating-row">
            <div class="stars">
              {Array(5).fill(null).map(() => (
                <svg class="star" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
              ))}
            </div>
            <span class="rating-text">{t.rating}/5</span>
          </div>

          <p class="review-text">{t.text}</p>

          <p class="review-meta">{t.timeAgo} - {t.location}</p>

          <div class="card-footer">
            <img src="/images/image copy.png" alt="Google" class="google-icon">
            <span class="business-name">Montessa Kennel</span>
          </div>
        </div>
      ))}
    </div>

    <a href="/testimonials" class="view-all-btn">
      View All Reviews
      <svg viewBox="0 0 24 24"><path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/></svg>
    </a>
  </div>
</section>

<style>
  .testimonials-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #f8f9fa;
    padding: 4rem 1.5rem;
  }

  .section-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .google-reviews-badge {
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .google-reviews-badge img {
    height: 80px;
    width: auto;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: #666;
    margin: 0;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .testimonial-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border: 1px solid #e8e8e8;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .avatar {
    position: relative;
    width: 50px;
    height: 50px;
    background: #e0e0e0;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: 700;
    color: #555;
  }

  .verified-badge {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 18px;
    height: 18px;
    background: #00a67d;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid white;
  }

  .verified-badge svg {
    width: 10px;
    height: 10px;
    fill: white;
  }

  .reviewer-info h4 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: #2a2a2a;
  }

  .reviewer-label {
    font-size: 0.85rem;
    color: #00a67d;
    margin: 0;
  }

  .rating-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .star {
    width: 24px;
    height: 24px;
    fill: #ffc107;
  }

  .rating-text {
    font-size: 1.1rem;
    color: #666;
    font-weight: 500;
  }

  .review-text {
    background: #f8f9fa;
    border-left: 4px solid #00a67d;
    padding: 1rem;
    margin: 0 0 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #333;
    flex-grow: 1;
  }

  .review-meta {
    font-size: 0.85rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    background: #f8f9fa;
    margin: 0 -1.5rem -1.5rem;
    padding: 1rem 1.5rem;
    border-radius: 0 0 12px 12px;
  }

  .google-icon {
    width: 30px;
    height: 30px;
  }

  .business-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: #1a73e8;
    text-decoration: underline;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #f19645, #e08839);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    margin: 0 auto;
    display: block;
    width: fit-content;
    box-shadow: 0 4px 15px rgba(9, 81, 54, 0.3);
  }

  .view-all-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(9, 81, 54, 0.4);
  }

  .view-all-btn svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  @media (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    .google-reviews-badge img {
      height: 60px;
    }
  }
</style>
