---
// HighlightBox component - Dark highlight boxes
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="highlight-box">
  {title && <h3 class="title">{title}</h3>}
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .highlight-box {
    display: block;
    margin: 2rem 0;
    background: #3a3a3a;
    border-radius: 6px;
    padding: 2rem;
    color: white;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem;
    color: white;
  }

  .content {
    line-height: 1.8;
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .content :global(p) {
    margin-bottom: 0.75rem;
  }

  .content :global(p:last-child) {
    margin-bottom: 0;
  }

  .content :global(ul) {
    margin: 0.75rem 0 0 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.35rem;
  }
</style>
