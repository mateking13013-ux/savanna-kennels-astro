---
// ContactSection component
---

<section class="contact-section" id="contact">
  <div class="contact-container">
    <div class="section-header">
      <span class="section-badge">Get In Touch</span>
      <h2 class="section-title">Ready to Find Your <span>Perfect Puppy</span>?</h2>
      <p class="section-subtitle">Have questions or ready to welcome a new furry family member? We'd love to hear from you!</p>
    </div>

    <div class="contact-grid">
      <div class="contact-form-wrapper">
        <h3 class="form-title">Puppy Inquiry Form</h3>
        <form class="contact-form" id="homeContactForm">
          <input type="hidden" name="access_key" value="48571cae-cf74-465c-8053-4835599cd4a8">
          <input type="hidden" name="subject" value="New Puppy Inquiry - Montessa Kennel">
          <input type="hidden" name="from_name" value="Montessa Kennel Website">

          <div class="form-row">
            <div class="form-group">
              <label for="homeFirstName">First Name</label>
              <input type="text" id="homeFirstName" name="firstName" required>
            </div>
            <div class="form-group">
              <label for="homeLastName">Last Name</label>
              <input type="text" id="homeLastName" name="lastName" required>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="homeEmail">Email</label>
              <input type="email" id="homeEmail" name="email" required>
            </div>
            <div class="form-group">
              <label for="homePhone">Phone</label>
              <input type="tel" id="homePhone" name="phone">
            </div>
          </div>

          <div class="form-group">
            <label for="homeAddress">Address</label>
            <input type="text" id="homeAddress" name="address">
          </div>

          <div class="form-group">
            <label for="homeMessage">Message</label>
            <textarea id="homeMessage" name="message"></textarea>
          </div>

          <button type="submit" class="btn-submit">
            Send Message
            <svg viewBox="0 0 24 24"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
          </button>
        </form>
      </div>

      <div class="contact-info">
        <h3 class="info-title">Contact Information</h3>

        <div class="info-item">
          <div class="info-icon">
            <svg viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
          </div>
          <div class="info-content">
            <h4>Email Us</h4>
            <p><a href="mailto:info@montessakennel.co.za">info@montessakennel.co.za</a></p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
          </div>
          <div class="info-content">
            <h4>Response Time</h4>
            <p>We typically respond within<br>24 hours or less</p>
          </div>
        </div>

        <div class="info-note">
          <h4>Our Location</h4>
          <p>We operate as a family-based home breeder, so for the safety and privacy of our family and puppies, we do not publicly list our address. Once you contact us, we'll gladly share our exact location and arrange a convenient visit.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('homeContactForm') as HTMLFormElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const emailInput = form.querySelector('#homeEmail') as HTMLInputElement;

    formData.append("replyto", emailInput.value);

    const originalHTML = submitBtn.innerHTML;
    submitBtn.innerHTML = "Sending...";
    submitBtn.disabled = true;

    try {
      const response = await fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData
      });

      const data = await response.json();

      if (response.ok) {
        window.location.href = "/thank-you";
      } else {
        alert("Error: " + data.message);
      }
    } catch (error) {
      alert("Something went wrong. Please try again.");
    } finally {
      submitBtn.innerHTML = originalHTML;
      submitBtn.disabled = false;
    }
  });
</script>

<style>
  .contact-section {
    display: block;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
    background: #faf5eb;
    padding: 4rem 1.5rem;
  }

  .contact-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    background: #f19645;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 0.75rem;
  }

  .section-title span {
    color: #e08839;
  }

  .section-subtitle {
    font-size: 1.05rem;
    color: #666;
    margin: 0;
    max-width: 550px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .contact-info {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .info-title {
    font-size: 1.35rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 1.5rem;
  }

  .info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .info-icon {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, #f19645, #e08839);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .info-icon svg {
    width: 22px;
    height: 22px;
    fill: white;
  }

  .info-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: #2a2a2a;
    margin: 0 0 0.25rem;
  }

  .info-content p {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  .info-content a {
    color: #f19645;
    text-decoration: none;
    font-weight: 500;
  }

  .info-content a:hover {
    color: #e08839;
  }

  .info-note {
    background: #faf5eb;
    border-radius: 12px;
    padding: 1.25rem;
    margin-top: 1rem;
    border-left: 3px solid #f19645;
  }

  .info-note h4 {
    font-size: 1rem;
    font-weight: 600;
    color: #2a2a2a;
    margin: 0 0 0.5rem;
  }

  .info-note p {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  .contact-form-wrapper {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .form-title {
    font-size: 1.35rem;
    font-weight: 700;
    color: #2a2a2a;
    margin: 0 0 1.5rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #333;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    border: 2px solid #eee;
    border-radius: 10px;
    font-size: 0.95rem;
    font-family: inherit;
    transition: all 0.3s ease;
    background: #fafafa;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #f19645;
    background: white;
  }

  .form-group textarea {
    min-height: 120px;
    resize: vertical;
  }

  .available-puppies-label {
    font-size: 0.8rem;
    color: #666;
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .available-puppies-label strong {
    color: #333;
  }

  .btn-submit {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #f19645;
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 0.5rem;
  }

  .btn-submit:hover {
    background: #e08839;
    transform: translateY(-2px);
  }

  .btn-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .btn-submit svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .contact-section {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-info,
    .contact-form-wrapper {
      padding: 1.5rem;
    }
  }
</style>
